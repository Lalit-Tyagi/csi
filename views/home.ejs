<% layout('layouts/boilerplate') -%>
    <main>
        <section class="container">
            <div class="carousel slide" id="main-carousel" data-ride="carousel">
                <ol id="collection" class="carousel-indicators">
                    <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#main-carousel" data-slide-to="1"></li>
                    <li data-target="#main-carousel" data-slide-to="2"></li>
                    <li data-target="#main-carousel" data-slide-to="3"></li>
                </ol><!-- /.carousel-indicators -->

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="../public/img/slide2.JPG" alt="">
                        <div class="carousel-caption">
                            <h1>Luxury Dresses</h1>
                            <p class="">Very feminine elegant dresses totally comfortable to wear every
                                day.
                            </p>
                            <a class="btn btn-detail " href="/collection/apparel">View
                                Collection</a>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block  img-fluid" src="../public/img/slide1.JPG" alt="">
                        <div class="carousel-caption">
                            <h1>Tie-Dye Beach Coverups</h1>
                            <p class="">Pack this tie-dye kaftan for your next beach trip to wear as a
                                cover up during the day and with wedges at night.</p>

                            <a class="btn btn-detail " href="/collection/apparel">View
                                Collection</a>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="../public/img/slide3.JPG" alt="">
                        <div class="carousel-caption text-dark">
                            <h1>Luxury Kaftans</h1>
                            <p class="">Kaftan's is more than just a beach cover up; it is an
                                eye-catching, gaze-holding expression of the woman wearing it. </p>
                            <a class="btn btn-detail " href="/collection/apparel">View
                                Collection</a>

                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="../public/img/slide4.JPG" alt="">
                        <div class="carousel-caption text-dark">
                            <h1>Luxury Scarves</h1>
                            <p class="">Luxury scarves embodies the latest trends and high quality materials. </p>
                            <a class="btn btn-detail " href="/collection/apparel">View
                                Collection</a>
                        </div>
                    </div>

                </div>

                <a href="#main-carousel" class="carousel-control-prev" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="sr-only" aria-hidden="true">Prev</span>
                </a>
                <a href="#main-carousel" class="carousel-control-next" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="sr-only" aria-hidden="true">Next</span>
                </a>
            </div>
        </section>
        <section>
            <div class="collections my-5">Our Collection</div>
            <div class="container">
                <div class="row">
                    <div class="col-6 col-lg-4 my-3 ">
                        <div class="card collection-card zoom bg-dark text-white">
                            <img class="img-fluid" src="../public/img/img(1).jpg" alt="Card image">
                            <a href="/collection/apparel" class="card-img-overlay">
                                <div class=" title text-center d-flex align-items-end h-100 p-2">
                                    <span class="mb-0">Apparel</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 my-3">
                        <div class="card collection-card zoom bg-dark text-white">
                            <img class=" img-fluid" src="../public/img/img(2).jpg" alt="Card image">
                            <a href="/collection/accessories" class="card-img-overlay">
                                <div class=" title text-center d-flex align-items-end h-100 p-2">
                                    <span class="mb-0">Accessories</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 my-3">
                        <div class="card collection-card  zoom bg-dark text-white">
                            <img class=" img-fluid" src="../public/img/img(3).jpg" alt="Card image">
                            <a href="/collection/jewellery" class="card-img-overlay">
                                <div class=" title text-center d-flex align-items-end h-100 p-2">
                                    <span class="mb-0">Jewellery</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 my-3">
                        <div class="card collection-card zoom bg-dark  text-white">
                            <img class=" img-fluid" src="../public/img/img(4).jpg" alt="Card image">
                            <a href="/collection/handbag" class="card-img-overlay">
                                <div class=" title text-center d-flex align-items-end h-100 p-2">
                                    <span class="mb-0">Handbags</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 my-3 ">
                        <div class="card collection-card zoom bg-dark text-white">
                            <img class=" img-fluid" src="../public/img/img(5).jpg" alt="Card image">
                            <a href="/collection/home" class="card-img-overlay">
                                <div class=" title text-center d-flex align-items-end h-100 p-2">
                                    <span class="mb-0">Home</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 my-3">
                        <div class="card collection-card zoom bg-dark text-white">
                            <img class="img-fluid" src="../public/img/img(6).jpg" alt="Card image">
                            <a href="/collection/all" class="card-img-overlay">
                                <div class=" title text-center d-flex align-items-end h-100 p-2">
                                    <span class="mb-0">View all</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>